{
  "name": "poptrivia",
  "version": "0.1.0",
  "dependencies": {
    "flatstore": "^1.0.10",
    "nodemon": "^2.0.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-speech": "^1.0.2"
  },
  "scripts": {
    "start": "./node_modules/.bin/concurrently npm:client-dev npm:server-dev npm:simulator npm:simulator-sync",
    "client-dev": "./node_modules/.bin/webpack --config builds/webpack/client/dev.config.js --watch ./game-client",
    "server-dev": "./node_modules/.bin/webpack --config builds/webpack/server/dev.config.js --watch ./game-server",
    "simulator": "nodemon --inspect --enable-source-maps --watch ../fivesecondgames/simulator/*.js -r source-map-support/register ../fivesecondgames/simulator/server.js",
    "simulator-sync": "./node_modules/.bin/wait-on http://localhost:3100/ && browser-sync start --no-ghost-mode --ws --port 3200 --proxy localhost:3100 --files=./game-client/* --files=./builds/client/client.bundle.js --files ../fivesecondgames/simulator/*.html  --ignore=node_modules",
    "deploy": "npm run build:client && npm run build:server && node --inspect ../fivesecondgames/simulator/deploy.js all",
    "deploy:client": "npm run build:client && node --inspect ../fivesecondgames/simulator/deploy.js client",
    "deploy:server": "npm run build:server && node --inspect ../fivesecondgames/simulator/deploy.js server",
    "deploy:db": "node --inspect ../fivesecondgames/simulator/deploy.js db",
    "build:client": "./node_modules/.bin/webpack --config builds/webpack/client/prod.config.js",
    "build:server": "./node_modules/.bin/webpack --config builds/webpack/server/prod.config.js"
  },
  "devDependencies": {
    "fivesecondgames": "file:../fivesecondgames",
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "babel-loader": "^8.2.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.26.14",
    "concurrently": "^6.1.0",
    "core-js": "^3.12.1",
    "css-loader": "^5.2.5",
    "sass": "^1.33.0",
    "sass-loader": "^11.1.1",
    "style-loader": "^2.0.0",
    "url-loader": "^4.1.1",
    "wait-on": "^5.3.0",
    "webpack": "^5.37.1",
    "webpack-cli": "^4.7.0"
  }
}
